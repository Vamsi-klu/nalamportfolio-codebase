{
  "name": "nalamportfolio-chatbot",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "test": "jest --coverage --coverageReporters=text --colors"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jsdom": "^24.0.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "chatbot.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 100,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
